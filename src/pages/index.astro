---
// import DownloaderInput from "../../components/DownloaderInput";
import NavBar from "saveplays-navbar/components/NavBar.tsx";
import { SearchInput } from "../../components/Input";
import FeaturesAndCompatibilities from "../partials/FeaturesAndCompatibilities.astro";
import FeaturesGrid from "../partials/FeaturesGrid.astro";
import SeoHead from "../partials/SeoHead.astro";
import "../yt-index.scss";
import MainContent from "../MainContent.astro";
import Footer from "saveplays-footer/src/partials/Footer.astro";
import {
	featuresAndCompatibilities,
	featuresGridContent,
	mainContent,
	placeholder,
	title,
	pageProps,
	downloadResult,
} from "../content/content";
import DownloadResult from "../../components/DownloadResult";
---

<html lang="en">
	<SeoHead {...pageProps} />
	<body>
		<NavBar client:load lang="" />
		<div class="container">
			<h1 class="text-center">{title}</h1>
		</div>
		<main>
			<div class="container">
				<SearchInput client:load placeholder={placeholder} />
				<DownloadResult client:load content={downloadResult} />
				<DownloadResult client:load content={downloadResult} />
				<FeaturesGrid content={featuresGridContent} lang="" />
				<MainContent content={mainContent} />
				<FeaturesAndCompatibilities
					content={featuresAndCompatibilities}
				/>
			</div>
		</main>
		<Footer />
	</body>
</html>
