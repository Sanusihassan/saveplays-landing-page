---
const { content } = Astro.props;
---

<div class="main-content">
    <h2>{content.title}</h2>
    <h3>{content.guideTitle}</h3>
    <p>{content.introduction}</p>
    <p>{content.details}</p>
    <h4>{content.highQualityTitle}</h4>
    <p>{content.highQualityDescription}</p>
    <p>{content.benefits}</p>
    <h5>{content.howToTitle}</h5>
    <ol>
        <li>
            {content.steps.step1.title}
            <p>{content.steps.step1.description}</p>
        </li>
        <li>
            {content.steps.step2.title}
            <p>{content.steps.step2.description}</p>
        </li>
        <li>
            {content.steps.step3.title}
            <p>{content.steps.step3.description}</p>
        </li>
    </ol>
</div>

<style lang="scss">
    .main-content {
        margin: 0 auto;
        padding: 2rem 1rem;

        h2 {
            font-size: 1.875rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
        }

        h3 {
            font-size: 1.5rem;
            font-weight: 600;
            color: #1f2937; // gray-800
            margin-bottom: 1rem;
        }

        h4 {
            font-size: 1.25rem;
            font-weight: 600;
            color: #1f2937;
            margin: 2rem 0 1rem;
        }

        h5 {
            font-size: 1.125rem;
            font-weight: 600;
            color: #1f2937;
            margin: 2rem 0 1.5rem;
        }

        p {
            color: #4b5563; // gray-600
            line-height: 1.625;
            margin-bottom: 1.5rem;

            &:last-child {
                margin-bottom: 0;
            }
        }

        .content-section {
            margin: 1.5rem 0;
        }

        .steps-list {
            list-style-type: decimal;
            margin-left: 1.5rem;

            li {
                margin-bottom: 1.5rem;
                padding-left: 0.5rem;

                &:last-child {
                    margin-bottom: 0;
                }
            }

            .step-title {
                display: block;
                font-weight: 500;
                color: #1f2937;
                margin-bottom: 0.5rem;
            }

            p {
                color: #4b5563;
                margin-top: 0.5rem;
            }
        }
    }

    // Media query for mobile responsiveness
    @media (max-width: 768px) {
        .main-content {
            padding: 1.5rem 1rem;

            h2 {
                font-size: 1.5rem;
            }

            h3 {
                font-size: 1.25rem;
            }

            h4 {
                font-size: 1.125rem;
            }

            h5 {
                font-size: 1rem;
            }
        }
    }
</style>
