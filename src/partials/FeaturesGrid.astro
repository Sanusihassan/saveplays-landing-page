---
import {
    FaFacebook,
    FaInstagram,
    FaXTwitter,
    FaYoutube,
} from "react-icons/fa6";
---

<section class="downloaders-features">
    <div class="downloaders-features-container">
        <div class="downloaders-features-grid">
            <a
                href="/youtube-downloader"
                class="downloaders-features-item youtube"
                aria-label="YouTube Downloader"
            >
                <FaYoutube className="downloaders-features-icon" />
                <h3 class="downloaders-features-title">YouTube Downloader</h3>
                <p class="downloaders-features-description">
                    Download videos in multiple formats and resolutions from
                    YouTube
                </p>
            </a>
            <a
                href="/facebook-downloader"
                class="downloaders-features-item facebook"
                aria-label="Facebook Downloader"
            >
                <FaFacebook className="downloaders-features-icon" />
                <h3 class="downloaders-features-title">Facebook Downloader</h3>
                <p class="downloaders-features-description">
                    Save videos from Facebook with high-quality downloads
                </p>
            </a>
            <a
                href="/instagram-downloader"
                class="downloaders-features-item instagram"
                aria-label="Instagram Downloader"
            >
                <FaInstagram className="downloaders-features-icon" />
                <h3 class="downloaders-features-title">Instagram Downloader</h3>
                <p class="downloaders-features-description">
                    Download Instagram reels, posts, and stories easily
                </p>
            </a>
            <a
                href="/twitter-downloader"
                class="downloaders-features-item twitter"
                aria-label="Twitter Downloader"
            >
                <FaXTwitter className="downloaders-features-icon" />
                <h3 class="downloaders-features-title">
                    X (Twitter) Downloader
                </h3>
                <p class="downloaders-features-description">
                    Grab videos and media from Twitter (X) with a single click
                </p>
            </a>
        </div>
    </div>
</section>

<style lang="scss">
    .downloaders-features {
        padding: 2rem 0;

        &-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        &-item {
            &.youtube {
                border-top: 4px solid #ff0000 !important;
                color: #ff0000;
            }
            &.facebook {
                border-top: 4px solid #1877f2 !important;
                color: #1877f2;
            }
            &.instagram {
                border-top: 4px solid #e1306c !important;
                color: #e1306c;
            }
            &.twitter {
                border-top: 4px solid #000 !important;
                color: #000;
            }
            background-color: white;
            border-radius: 12px;
            padding: 2rem;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition:
                transform 0.3s ease,
                box-shadow 0.3s ease;
            text-decoration: none;
            color: inherit;

            &:hover {
                transform: translateY(-10px);
                box-shadow: 0 10px 15px rgba(0, 0, 0, 0.15);
            }
        }

        &-icon {
            width: 64px;
            height: 64px;
            margin-bottom: 1rem;
            color: currentColor;
        }

        &-title {
            font-size: 1.25rem;
            margin-bottom: 0.75rem;
            color: #333;
        }

        &-description {
            color: #666;
            font-size: 0.95rem;
        }
    }
</style>
