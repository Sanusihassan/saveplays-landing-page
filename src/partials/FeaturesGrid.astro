---
import {
    FaFacebook,
    FaInstagram,
    FaXTwitter,
    FaYoutube,
    FaSnapchat,
} from "react-icons/fa6";
import { SiBilibili, SiDailymotion } from "react-icons/si";
import { BsCloud } from "react-icons/bs"; // For Bluesky
const { content, lang } = Astro.props;
---

<section class="downloaders-features">
    <div class="downloaders-features-container">
        <div class="downloaders-features-grid">
            <a
                href={`/${lang ? lang + "/" : ""}youtube-downloader`}
                class="downloaders-features-item youtube"
                aria-label={content.youtube.ariaLabel}
            >
                <FaYoutube className="downloaders-features-icon" />
                <h3 class="downloaders-features-title">
                    {content.youtube.title}
                </h3>
                <p class="downloaders-features-description">
                    {content.youtube.description}
                </p>
            </a>
            <a
                href={`/${lang ? lang + "/" : ""}facebook-downloader`}
                class="downloaders-features-item facebook"
                aria-label={content.facebook.ariaLabel}
            >
                <FaFacebook className="downloaders-features-icon" />
                <h3 class="downloaders-features-title">
                    {content.facebook.title}
                </h3>
                <p class="downloaders-features-description">
                    {content.facebook.description}
                </p>
            </a>
            <a
                href={`/${lang ? lang + "/" : ""}instagram-downloader`}
                class="downloaders-features-item instagram"
                aria-label={content.instagram.ariaLabel}
            >
                <FaInstagram className="downloaders-features-icon" />
                <h3 class="downloaders-features-title">
                    {content.instagram.title}
                </h3>
                <p class="downloaders-features-description">
                    {content.instagram.description}
                </p>
            </a>
            <a
                href={`/${lang ? lang + "/" : ""}twitter-downloader`}
                class="downloaders-features-item twitter"
                aria-label={content.twitter.ariaLabel}
            >
                <FaXTwitter className="downloaders-features-icon" />
                <h3 class="downloaders-features-title">
                    {content.twitter.title}
                </h3>
                <p class="downloaders-features-description">
                    {content.twitter.description}
                </p>
            </a>
            <a
                href={`/${lang ? lang + "/" : ""}bilibili-downloader`}
                class="downloaders-features-item bilibili"
                aria-label={content.bilibili.ariaLabel}
            >
                <SiBilibili className="downloaders-features-icon" />
                <h3 class="downloaders-features-title">
                    {content.bilibili.title}
                </h3>
                <p class="downloaders-features-description">
                    {content.bilibili.description}
                </p>
            </a>
            <a
                href={`/${lang ? lang + "/" : ""}bluesky-downloader`}
                class="downloaders-features-item bluesky"
                aria-label={content.bluesky.ariaLabel}
            >
                <BsCloud className="downloaders-features-icon" />
                <h3 class="downloaders-features-title">
                    {content.bluesky.title}
                </h3>
                <p class="downloaders-features-description">
                    {content.bluesky.description}
                </p>
            </a>
            <a
                href={`/${lang ? lang + "/" : ""}snapchat-downloader`}
                class="downloaders-features-item snapchat"
                aria-label={content.snapchat.ariaLabel}
            >
                <FaSnapchat className="downloaders-features-icon" />
                <h3 class="downloaders-features-title">
                    {content.snapchat.title}
                </h3>
                <p class="downloaders-features-description">
                    {content.snapchat.description}
                </p>
            </a>
            <a
                href={`/${lang ? lang + "/" : ""}dailymotion-downloader`}
                class="downloaders-features-item dailymotion"
                aria-label={content.dailymotion.ariaLabel}
            >
                <SiDailymotion className="downloaders-features-icon" />
                <h3 class="downloaders-features-title">
                    {content.dailymotion.title}
                </h3>
                <p class="downloaders-features-description">
                    {content.dailymotion.description}
                </p>
            </a>
        </div>
    </div>
</section>

<style lang="scss">
    .downloaders-features {
        padding: 2rem 0;

        &-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        &-item {
            &.youtube {
                border-top: 4px solid #ff0000 !important;
                color: #ff0000;
            }
            &.facebook {
                border-top: 4px solid #1877f2 !important;
                color: #1877f2;
            }
            &.instagram {
                border-top: 4px solid #e1306c !important;
                color: #e1306c;
            }
            &.twitter {
                border-top: 4px solid #000 !important;
                color: #000;
            }
            &.bilibili {
                border-top: 4px solid #00a1d6 !important;
                color: #00a1d6;
            }
            &.bluesky {
                border-top: 4px solid #0560ff !important;
                color: #0560ff;
            }
            &.snapchat {
                border-top: 4px solid #fffc00 !important;
                color: #000;

                .downloaders-features-icon {
                    color: #fffc00;
                    -webkit-text-stroke: 1px black;
                }
            }
            &.dailymotion {
                border-top: 4px solid #00b2ff !important;
                color: #00b2ff;
            }
            background-color: white;
            border-radius: 12px;
            padding: 2rem;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition:
                transform 0.3s ease,
                box-shadow 0.3s ease;
            text-decoration: none;
            color: inherit;

            &:hover {
                transform: translateY(-10px);
                box-shadow: 0 10px 15px rgba(0, 0, 0, 0.15);
            }
        }

        &-icon {
            width: 64px;
            height: 64px;
            margin-bottom: 1rem;
            color: currentColor;
        }

        &-title {
            font-size: 1.25rem;
            margin-bottom: 0.75rem;
            color: #333;
        }

        &-description {
            color: #666;
            font-size: 0.95rem;
        }
    }
</style>
