---
const { content } = Astro.props;
---

<div class="features-and-compatibility">
    <div class="features-and-compatibility-text">
        <h2>{content.resolutionTitle}</h2>
        <p>{content.resolutionDescription}</p>
    </div>
    <img
        src="/4k.webp"
        width="354"
        height="216"
        alt={content.resolutionImageAlt}
        title={content.resolutionImageTitle}
    />
</div>
<div class="features-and-compatibility mb-100">
    <div class="features-and-compatibility-text">
        <h6>{content.compatibilityTitle}</h6>
        <p>{content.compatibilityDescription}</p>
    </div>
    <img
        src="/browser-compatibility.webp"
        width="354"
        height="217"
        alt={content.compatibilityImageAlt}
        title={content.compatibilityImageAlt}
    />
</div>

<style lang="scss">
    .features-and-compatibility {
        $spacing-lg: 3rem;
        $spacing-md: 2rem;

        $text-color: #374151;
        $transition-speed: 0.3s;

        display: flex;
        align-items: center;
        gap: $spacing-lg;
        padding: $spacing-lg 0;
        max-width: 1200px;
        margin: 0 auto;

        // Make it responsive
        @media (max-width: 768px) {
            flex-direction: column;
            text-align: center;
            gap: $spacing-md;
            padding: $spacing-md 1rem;
        }

        &.mb-100 {
            margin-bottom: 100px;
        }

        &-text {
            flex: 1;

            h2,
            h6 {
                font-size: 2rem;
                font-weight: 700;

                margin-bottom: 1rem;
                line-height: 1.2;

                @media (max-width: 768px) {
                    font-size: 1.5rem;
                }
            }

            p {
                font-size: 1.1rem;
                line-height: 1.6;
                color: $text-color;
                margin: 0;
            }
        }

        img {
            max-width: 100%;
            height: auto;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            transition: transform $transition-speed ease;

            &:hover {
                transform: translateY(-5px);
            }

            @media (max-width: 768px) {
                width: 100%;
                max-width: 354px;
            }
        }

        // Alternate layout for even sections
        &:nth-child(even) {
            flex-direction: row-reverse;

            @media (max-width: 768px) {
                flex-direction: column;
            }
        }
    }
</style>
